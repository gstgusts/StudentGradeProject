<Window x:Class="Students.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Students.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="61*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label>Student ID:</Label>
            <TextBox Name="StudentId"></TextBox>
            <Label>Surname:</Label>
            <TextBox Name="StudentName"></TextBox>
            <Label>Surname:</Label>
            <TextBox Name="StudentSurname"></TextBox>
            <Button Click="Button_Click_1">Add</Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label>Search query</Label>
            <TextBox Name="SearchQuery" Width="200"></TextBox>
            <Button  Click="Button_Click" Grid.ColumnSpan="2">Search</Button>
        </StackPanel>
        

        <DataGrid Name="DataGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" Grid.ColumnSpan="2">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
